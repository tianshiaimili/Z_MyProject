<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/vod_landing_header_title_margin_left" >

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vod_landing_header_title_cell_seperator_height"
        android:layout_marginBottom="@dimen/vod_landing_header_title_cell_seperator_margin_bottom"
        android:layout_marginTop="@dimen/vod_landing_header_title_cell_seperator_margin_top"
        android:background="@color/vod_landing_header_title_cell_seperator" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/vod_landing_header_bar_height"
            android:gravity="center_vertical"
            android:text="VOD Title"
            android:textColor="@color/vod_landing_header_title_text_color"
            android:textSize="@dimen/vod_landing_header_title_text_size" 
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            />
        
        <TextView 
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/vod_landing_header_sub_title_text_size"
            android:textColor="@color/vod_landing_header_sub_title_text_color"
            android:layout_alignBaseline="@id/title"
            android:layout_marginLeft="@dimen/vod_landing_header_sub_title_margin_left"
            android:singleLine="true"
            />
    </RelativeLayout>

    

</LinearLayout>