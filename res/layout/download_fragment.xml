<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" 
    >
 
    <TextView 
        android:id="@+id/download_textview"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"        
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:lines="2"
        android:layout_marginTop="48dp"
        android:textColor="#CCCCCC"
        
        />
    
    <Button 
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="more"
		android:drawableRight="@drawable/btn_more_expand"
		android:layout_gravity="right"
        style="@style/buttonstyle"
        android:textSize="24sp"
        />
    
    
    <GridView 
        android:id="@+id/download_gridview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFCCCC"
        android:visibility="gone"
        ></GridView>
    

</LinearLayout>
