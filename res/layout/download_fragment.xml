<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" 
    >
 
    <TextView 
        android:id="@+id/download_textview"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"        
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:lines="2"
        android:layout_marginTop="48dp"
        android:textColor="#CCCCCC"
        
        />
    
    <Button 
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="more"
		android:drawableRight="@drawable/btn_more_expand"
		android:layout_gravity="right"
        style="@style/buttonstyle"
        android:textSize="24sp"
        />
    
    
    <GridView 
        android:id="@+id/download_gridview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFCCCC"
        android:visibility="gone"
        ></GridView>
    
    <RelativeLayout 
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        >
       <RelativeLayout 
           android:id="@+id/xxxxx"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="20dp"
        	android:background="#CCCCCC"
           >
        <TextView 
            android:id="@+id/edit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You May Also Like"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
			android:gravity="center_vertical"
			android:layout_centerVertical="true"
            />
        
        <Button 
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Edit"
             android:textSize="24sp"
            android:background="@drawable/edit_button_selector"
            />
        </RelativeLayout> 
        
       <LinearLayout 
           android:id="@+id/edit_sublayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="20dp"
           android:layout_below="@id/xxxxx"
           >
           
           <ListView 
               android:id="@+id/edit_listview"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:divider="@drawable/diver"
               android:cacheColorHint="#00000000"
               android:listSelector="#00000000"
               >
               
           </ListView>
           
      
        <ImageView 
            android:id="@+id/edit_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/xianjian1"
             android:visibility="gone"
            />
        
         </LinearLayout>
    </RelativeLayout>
    
    

</LinearLayout>
