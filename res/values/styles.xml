<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- style of button -->
    <style name="buttonstyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="toggbuttonstyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/toggbutton_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="style_double_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_double_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 导航栏文字 -->
    <style name="style_tv_small_14" parent="style_match_wrap">
        <item name="android:textSize">@dimen/tv_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/cs_47</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- setting button 的设置 -->
    <style name="MenuStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <!-- 点击扫描弹出列表 -->
    <style name="Popup_Animation_Alpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/layout_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/layout_alpha_out</item>
    </style>

    <style name="home_color_shopping_button">
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/color_shopping_button_bg</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
    </style>

    
    
    <style name="ListViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:listSelector">@color/homebg_color</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>
    
    
</resources>